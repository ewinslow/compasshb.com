{
	"name": "compasshb/compasshb.com",
	"description": "...and the gospel rings out!",
	"support": {
		"issues": "https://github.com/CompassHB/compasshb.com/issues"
	},
	"type": "project",
	"license": "MIT",
	"require": {
		"php": ">=5.5",
		"laravel/framework": "5.0.*",
		"illuminate/html": "5.*",
		"bugsnag/bugsnag-laravel": "1.*",
		"vimeo/vimeo-api": "1.1.0",
		"guzzlehttp/guzzle": "~5.1",
		"guzzlehttp/oauth-subscriber": "~0.2",
		"league/flysystem-aws-s3-v2": "~1.0",
	  	"google/apiclient": "~1.1",
	  	"graham-campbell/parse": "~2.0",
		"graham-campbell/htmlmin": "^3.0",
		"spatie/searchindex": "^2.0",
		"compasshb/ccb-php-client": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"laracasts/integrated": "0.11.*"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"CompassHB\\Www\\": "app/"
		},
		"files": ["app/Helpers.php"]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		],
		"test": ["phpunit"],
		"cloud9:install": [
			"sudo composer self-update",
			"sudo composer install",
			"cp .env.cloud9 .env",
			"sudo apt-get update",
			"sudo apt-get install php5-curl -y",
			"mysql-ctl start",
			"sudo apachectl restart",
			"sudo npm install gulp",
			"sudo npm install laravel-elixir",
			"bower install",
			"gulp",
			"php artisan migrate:install",
			"php artisan migrate:refresh --seed"
		],
		"db:reset": "php artisan migrate:refresh --seed"
	},
	"config": {
		"preferred-install": "dist"
	}
}
